{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"incremental": true,
		"skipLibCheck": true,
		"jsx": "react",
		"importHelpers": true,
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"~/*": ["src/*"],
			"root/*": ["*"],
		}
	},
}
